{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typeRoots": ["node_modules/@types", "src/@types"],
  "include": ["./src/**/*", "@types", "src/custom.d.ts", "__tests__"]
}
